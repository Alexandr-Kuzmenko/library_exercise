.main_nav_bar
  %p
    Book: #{@book.name}
  - if request.referer && request.referer != request.original_url
    = link_to 'Back', request.referrer, id: 'back'
  - else
    = link_to 'Back', books_path, id: 'back'
  %br/
  = link_to 'Edit book', edit_book_path(@book)
  %br/
  = link_to 'Delete book', book_path(@book), method: :delete,
      data: { confirm: 'Is it certain?' }
.page_content
  %tile_block
    .ul
      .li
        %p
          = @book.name
      .li
        %p
          = @book.author
      .li
        %p
          = @book.description
