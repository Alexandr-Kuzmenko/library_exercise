.comments_block
  .author_block
    - if author_user?(comment)
      - if @usr.avatar?
        %img.img-fluid{ alt: 'avatar', src: @usr.avatar.url }
      - else
        = image_tag 'no_avatar.jpg', alt: 'avatar', class: 'img-fluid'
      %p.m-0
        - if @usr.nickname?
          = @usr.nickname
        - else
          %span Nameless member
      %p.m-0
        = comment.created_at.strftime("%Y-%m-%d %H:%M")
  .comment_block
    = comment.text
